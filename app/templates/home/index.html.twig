{% extends 'base.html.twig' %}

{% block body %}
    {#        <h1 class="mt-5">Booking app! </h1>#}

    <h1>10 Latest Services</h1>
    <p class="lead">Select from table above a service to book!</p>
    <table class="table">
        <th>name</th>
        <th>date</th>
        <th>booking</th>
        {% for service in services %}
            <tr>
                <td>{{ service.name }}</td>
                <td>{{ service.date|date('d-m-y') }}</td>
                <td style="display: none" class="service-date">{{ service.date|date('yy-m-d') }}</td>
                {#<td><a href="{{ path('service_show',{'id':service.id}) }}">Book a slot</td>#}
                <td>
                    {% for slot in service.slots %}
                        <a class="btn btn-info"
                           href="{{ path('slot_book',{id:slot.id}) }}">{{ slot.time|date('H:i') }}</a>
                    {% endfor %}

                </td>
            </tr>
        {% endfor %}
    </table>
    </div>
    <p class="lead">or use the datepicker</p>

    <br><br><br> <br><br><br> <br><br><br> <br><br><br>
    <div>
        <input class="datepicker" data-date-format="mm/dd/yyyy">
    </div>


    <div  id='calendar'></div>

{% endblock %}

